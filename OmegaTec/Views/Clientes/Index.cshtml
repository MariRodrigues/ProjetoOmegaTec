@model IEnumerable<OmegaTec.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Nossos clientes</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Create" style="color: white;"><button class="btn btn-primary">Criar novo</button></a>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomeCliente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cnpj)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Endereco)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Telefone)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NomeCliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cnpj)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Endereco)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefone)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ClienteId">Deletar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

