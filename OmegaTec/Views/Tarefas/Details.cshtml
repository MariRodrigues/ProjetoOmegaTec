@model OmegaTec.Models.Tarefa

@{
    ViewData["Title"] = "Details";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Detalhes</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Cliente</h4>
                    </div>
                    <div class="card-body table-responsive">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.NomeCliente)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.NomeCliente.NomeCliente)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Descricao)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Prioridade)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Prioridade)
                                </dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.TarefaId" style="color:white;"><button class="btn btn-primary">Editar</button></a>|
                            <a asp-action="Index" style="color: white;"><button class="btn btn-dark">Voltar aos agendamentos</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
